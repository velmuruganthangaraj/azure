@model Application
<div role="tabpanel" class="tab-pane" id="groups-tab">
    <div id="group-list-container" class="list col-xs-12 admin-page-body">
        <div class="col-lg-12 short-description pull-left no-padding">         
                <span>
                    [[[The following groups have access to the application.]]]
                </span>
        </div>
        <div id="search-area" class="pull-right">
            <input type="text" class="pull-left" id="search-app-groups" placeholder="[[[Search groups]]]" />
            <span class="su su-inner-close close-icon pull-left" id="group-clear-search" title="[[[Clear search]]]"></span>
            <span class="su su-search search-user pull-left" title="[[[Search]]]"></span>
        </div>

        <div id="add-groups-button" class="pull-right">        
                <button class="primary-button">[[[Grant Access]]]</button>
        </div>
          
        <div id="remove-groups-button" class="pull-right hide">
            <button class="critical-action-button remove-button">[[[Revoke access]]]</button>
        </div>

        <div class="col-xs-12 no-padding">
            <div id="groups_grid">
            </div>
        </div>
    </div>

    <div class="modal no-padding" id="grant-access-group-dialog" tabindex="-1" role="dialog">
        <div class="col-lg-12 modal-dialog no-padding" role="document">
            <div class="col-lg-12 modal-content no-padding" autocomplete="off">
                <div class="col-md-12 modal-header">
                    <div class="col-xs-8 no-padding">
                        <i class="su head-icon"></i>
                        <span class="modal-title">[[[Grant Access to Groups]]] &mdash; @Model.Name</span>
                    </div>
                    <div class="col-xs-4 no-padding">
                        <a href="javascript:void(0);" onclick="onAddGroupsDialogClose()" class="close"><i class="su su-close"></i></a>
                    </div>
                    <div class="description pull-left">
                        <span>
                            [[[Select the groups who would be granted application access.]]]
                        </span>
                    </div>
                </div>
                <div class="modal-body col-xs-12">
                    <div id="add-group-search-area" class="pull-right">
                        <input type="text" class="pull-left" id="add-group-search" placeholder="[[[Search groups]]]" />
                        <span class="su su-inner-close close-icon pull-left" id="add-group-clear-search" title="[[[Clear search]]]"></span>
                        <span class="su su-search search-icon pull-left" title="[[[Search]]]"></span>
                    </div>
                    <div class="col-xs-12 no-padding">
                        <div id="add_groups_grid">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 modal-footer add-user-dialog-footer no-right-padding no-left-padding">
                    <input type="hidden" value="">
                    <input type="button" onclick="provideAccesstoGroups()" class="primary-button" id="grant-access-button" value="[[[Grant access]]]" />
                    <input type="button" onclick="onAddGroupsDialogClose()" class="secondary-button popup-close" value="[[[Cancel]]]" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal no-padding" id="group-remove-confirmation" tabindex="-1" role="dialog">
        <div class="col-lg-12 modal-dialog no-padding" role="document">
            <div class="col-lg-12 modal-content no-padding" autocomplete="off">
                <div class="col-md-12 modal-header">
                    <div class="col-xs-8 no-padding">
                        <i class="su su-delete head-icon"></i>
                        <span class="modal-title">[[[Revoke Group(s) Access]]]</span>
                    </div>
                    <div class="col-xs-4 no-padding">
                        <a href="javascript:void(0);" onclick="onGroupRemoveDialogClose()" class="close"><i class="su su-close"></i></a>
                    </div>
                </div>
                <div class="modal-body col-xs-12 no-padding">
                    <div class="col-xs-12 no-left-padding no-bottom-padding no-right-padding">
                        <div class="delete-msg">[[[Are you sure you want to revoke access for the selected group(s)?]]]</div>
                    </div>
                </div>
                <div class="col-xs-12 modal-footer  no-right-padding no-left-padding">
                    <input type="button" class="critical-action-button group-remove-confirm-button" value="[[[Yes]]]" />
                    <input type="button" onclick="onGroupRemoveDialogClose()" class="secondary-button popup-close" value="[[[No]]]" />
                </div>
            </div>
        </div>
    </div>
</div>